.page-search
    header
        display: flex
        background: #7b5b50
        padding: 10px
        input
            flex: 1
            background: rgba(255,255,255,.5)
            border-radius: 20px
            border: 1px solid #fff
            padding: 0 10px
            height: 28px
            line-height: @height
        span
            width: 55px
            color: #fff
            text-align: center
            height: 28px
            line-height: @height
    .sectionBox
        background: #fff
        display: flex
        padding: 10px 15px 0
        div
            flex: 1
            position: relative
            padding: 0 0 10px
            i
                position: absolute
                top: 4px
                font-size: 18px
            input
                border: 0 none
                border-bottom: 1px solid #7b5b50
                width: 100%
                height: 27px
                line-height: @height
                padding: 0 0 0 18px
                box-sizing: border-box
        em
            border: 1px solid #7b5b50
            width: 25px
            height: @width
            line-height: @width
            text-align: center
            display: block
            border-radius: 100%
            color: #7b5b50
            margin: 0 8px
            font-size: 12px
        span
            border: 1px solid #7b5b50
            width: 70px
            display: block
            height: 25px
            line-height: @height
            text-align: center
            border-radius: 3px
            margin: 0 0 0 8px
            color: #7b5b50
            &:active
                color: #a6948f
                border-color: #a6948f
    .icon-family
        font-size: 300px
        position: absolute
        top: 40%
        left: 50%
        transform: translate(-45%, -50%)
        color: #ebebeb
        z-index: 0
