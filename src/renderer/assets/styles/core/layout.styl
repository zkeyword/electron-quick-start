body
    -webkit-tap-highlight-color:rgba(0,0,0,0)
    -webkit-touch-callout: none
    background: #f2f4f5
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0

.lt-header
    padding: 0 45px
    width: 100%
    height: 44px
    line-height: @height
    position: fixed
    z-index: 1
    box-sizing: border-box
    background-color: #1c1c20
    top: 0
    left: 0
    right: 0

    .title
        color: #fff
        font-size: 18px
        width: 80%
        text-align: center
        margin: 0 auto
    
    .back
        display: inline-block
        position: absolute
        left: 0
        top: 0
        z-index:1
        color: #fff
        height: 44px
        line-height: @height
        padding: 0 0 0 30px
        .icon-back
            font-size: 18px
            position: absolute
            top: 13px
            left: 10px
    
    .btns
        position: absolute
        right: 0
        top: 0
        color: #fff
        padding: 0 20px
        z-index: 1
        cursor: pointer
    
    &~.lt-main
        padding-top: 45px
    


.lt-footer
    width: 100%
    background: #feffff
    position: fixed
    bottom:0
    left: 0
    box-sizing: border-box
    padding: 10px 0 5px
    display: flex
    z-index: 1
    text-align: center
    border-top: 1px solid #cdcece
    .tab
        color: #888
        &.on
            color: #7b5b50
        flex: 1
        div
            font-size: 12px
        .icon
            font-size: 23px
        
    &+.lt-main
        padding-bottom: 66px
